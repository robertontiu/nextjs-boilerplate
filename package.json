    "express": "^4.16.4",
    "husky": "^2.2.0",
    "linaria": "^1.3.1",
    "lint-staged": "^8.1.6",
    "modern-normalize": "^0.5.0",
    "next-images": "^1.1.1",
    "node-sass": "^4.12.0",
